<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.beraldo.hpe.view.AutoFitTextureView
        android:id="@+id/texture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/colorPrimaryTransparency50"
        android:orientation="horizontal"
        android:padding="@dimen/result_textview_padding" >

        <TextView
            android:id="@+id/performance_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_medium" />



        <TextView
            android:id="@+id/results_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_small" />

        <TextView
            android:id="@+id/info_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_small" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom">


        <Chronometer
            android:id="@+id/chronometer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/stop_button"
            android:layout_alignStart="@+id/stop_button"
            android:layout_marginBottom="40dp"
            android:textColor="#000"
            android:textSize="50dp" />


        <Button
            android:id="@+id/stop_button"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="128dp"
            android:background="@drawable/rounded_button"
            android:text="  Stop Session "
            android:textColor="@color/white" />


    </RelativeLayout>

</FrameLayout>
